<?xml version="1.0" encoding="utf-8"?>
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
     <TextView android:id="@+id/txtTotal" android:textSize="18sp"
     android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="12dp"/>
     <ScrollView android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
 <LinearLayout android:id="@+id/container" android:orientation="vertical"
 android:layout_width="match_parent"
android:layout_height="wrap_content"/>
 </ScrollView>
  <Button android:id="@+id/btnClear" android:text="Vaciar carrito"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
     </LinearLayout>